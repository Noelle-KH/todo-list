<ul class="list-group">
  {{#each todos}}
    <li class="list-group-item mb-2">
      <div class="row align-items-center">
        <div class="col-auto me-auto">
          <input
            type="checkbox"
            name="isDone"
            {{checked this.isDone}}
            disabled
          />
          <h4 class="d-inline ms-2">
            {{this.name}}
          </h4>
        </div>
        <div class="col-auto">
          <a class="btn btn-info" href="/todos/{{this._id}}"><i
              class="fa-solid fa-circle-info"
            ></i></a>
          <a class="btn btn-success" href="/todos/{{this._id}}/edit"><i
              class="fa-solid fa-pen-to-square"
            ></i></a>
          <form
            class="d-inline"
            action="/todos/{{this._id}}/delete"
            method="POST"
          >
            <button
              class="btn btn-danger"
              type="submit"
              onclick="return confirm(`Are you sure you want to delete '{{this.name}}'?`)"
            ><i class="fa-solid fa-trash"></i></button>
          </form>
        </div>
      </div>
    </li>
  {{/each}}
</ul>